<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageButton
        android:id="@+id/icon_room"
        android:layout_width="@dimen/sp_4xl"
        android:layout_height="@dimen/sp_4xl"
        android:layout_margin="@dimen/sp_md"
        android:background="@drawable/shape_squircle_inactive"
        android:contentDescription="@string/content_room"
        android:elevation="@dimen/sp_0"
        android:outlineSpotShadowColor="?attr/colorPrimary"
        android:src="@drawable/bx_bowl_hot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p" />

    <TextView
        android:id="@+id/text_test"
        style="@style/TextAppearance.Material3.BodySmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/sp_7xl"
        android:text="@string/placeholder_city"
        android:textAlignment="textStart"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/icon_room"
        app:layout_constraintStart_toStartOf="@+id/icon_room"
        app:layout_constraintTop_toBottomOf="@+id/icon_room" />

</androidx.constraintlayout.widget.ConstraintLayout>